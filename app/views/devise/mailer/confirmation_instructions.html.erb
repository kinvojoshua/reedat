<%= stylesheet_link_tag 'email', media: 'all' %>
<table class="email-container">
  <thead class="email-head">
    <tr class="icon">
      <th><ion-icon name="logo-reddit" class='icon'></ion-icon></th>
    </tr>
    <tr class='title'>
      <td><span>reedat<span></td>  
    </tr>
  </thead>
  <tbody class="email-body">
    <tr class="welcome">
      <td><p class='welcome'>Welcome to reedat <strong><%= @email %></strong></p></td>
    </tr>
    <tr class="confirm-text">
      <td><p class='confirm-text'>You can confirm your account email through the link below:</p></td>
    </tr>
    <tr class="confirm-link">
      <td><%= link_to 'Confirm my account', confirm_url(@token) %></td>
    </tr>
  </tbody>
  
</table>


<script src="https://unpkg.com/ionicons@4.2.4/dist/ionicons.js"></script>