
<%= stylesheet_link_tag 'comments', media: 'all' %>

<nav class='top-nav'>
  <ul class='navbar'>
    <div class='logo'>
      <li> <ion-icon class='logo-header' name="logo-reddit"> </ion-icon> </li>
      <li> <span class='logo-text'>REEDAT</span> </li>
    </div>
    <div class='list'>
      <li> <ion-icon name="trending-up"> </ion-icon> </li>
      <li> <ion-icon name="stats"> </ion-icon> </li>
      <li class='search'>
        <input class='search-box' type='text' placeholder='Search' />
      </li>
    </div>
    <% if @user == nil %>
    <div class='button-group'>
      <li><%= button_to 'Log-In', login_path, :class => 'login-button', :method => :get%></li>
      <li><%= button_to 'Sign-Up', new_user_path, :class => 'sign-up-button', :method => :get%></li>
    </div>
    <% else %>
      <li><%= button_to 'Logout', logout_path, :class => 'login-button', :method => :post%>
    <% end %>

  </ul>
</nav>


<section class='main-content'>

  <div class='content'>
    <div class='inner-content'>
      <div class='user'>
        <div class='icon'></div>
        <span class='posted-by'>
        Hi, u/ username: <%= @user.username %>
        </span>
      </div>

      <div class='title'>
        This is your username: <%= @user.username %>
      </div>

      <div class='picture -info'>
        <li>Total post: <%= @user.posts.count %></li>

        <li>Total comments: <%= @user.comments.count %></li>

        <li>Total votes: <%= @user.votes.count %></li>

        <li>Recent post: <%= link_to @user.posts.last.title, post_path(@user.posts.last) %></li>
      </div>
    </div>
  </div>

</section>

<section class='side-content'>
  <div class='popular'>
    <div class='head'></div>
    <div class='description'>Your personal Reedat profile. Come here to find all content you made on Reedat.</div>
    <div class='create-post'>
      <a href='#create-post'><button class='create-button'>Create Post</button> </a>
    </div>
  </div>

  <div id='create-post' class='modal-create'>
  <div>
      <a href="#modal-close" title="Close" class="modal-close">X</a>
      <span class='title'>Create Post</span>
      <%= form_with url: posts_path, html: {class: "form-create"}, local: true do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title, placeholder: "Title" %> <br>

        <%= f.label :body %>
        <%= f.text_area :body, placeholder: "Body" %> <br>
        <%= f.file_field :photos %>
        <%= f.hidden_field :user_id, value: @user.id %>

        <%= f.submit 'Post' %>
      <% end %>
    </div>
  </div>
</section>

<script src="https://unpkg.com/ionicons@4.2.4/dist/ionicons.js"></script>