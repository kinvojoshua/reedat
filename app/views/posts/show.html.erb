<h1> COMMENT NOW! </h1>

<h2> <%= @post.user.username %>
<h3> <%= @post.title %> </h3>
<h5> <%= @post.body %> </h3>
<% if @post.photos.url != nil %>
  <%= image_tag @post.photos.big_thumb.url %>
<% end %>

<%= form_with url: comments_path, local: true do |f| %>
  <%= f.label :Comment %>
  <%= f.text_field :body %>
  <%= f.hidden_field :user_id, :value => @current_user.id %>
  <%= f.hidden_field :post_id, :value => @post.id %>
  <%= f.submit %>
<% end %>

<% @comments.each do |comment| %>
    <%= render partial: 'comment', :locals => {:comment => comment, :user => @current_user} %>
<% end %>
